<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash">

    <TextView
        android:id="@+id/SwarSangam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="385dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="302dp"
        android:fontFamily="@font/palanquin_dark"
        android:text=" SwarSangam "
        android:textColor="#FE5454"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/SwarSangam"
        app:layout_constraintEnd_toEndOf="@+id/SwarSangam"
        app:layout_constraintStart_toStartOf="@+id/SwarSangam"
        app:srcCompat="@drawable/musicplayer" />
</androidx.constraintlayout.widget.ConstraintLayout>